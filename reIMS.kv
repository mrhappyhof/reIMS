#:kivy 2.0.0
WindowManager:
	MainScreen:
	LoginScreen:
	InventoryScreen:

<LoginScreen>:
	name: 'login'
	FloatLayout:
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'bottom'

			Image:
				source: 'res/img/keycard.png'
				size_hint: .8, .8

		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'

			Label:
				text: 'PLEASE LOG IN WITH YOUR KEYCARD'
				font_size: 0.1 * root.height
				height: 150
				size_hint: None, None

<MainScreen>:
	name: 'main'
	BoxLayout:
		spacing: 10
		padding: 10
		Button:
			font_size: 0.1 * root.height
			text: 'CHECK-OUT'
			on_release: root.check_out_button()
		Button:
			font_size: 0.1 * root.height
			text: 'CHECK-IN'
			on_release: root.check_in_button()

<InventoryScreen>:
	name: 'inv'
	GridLayout:
		spacing: 10
		padding: 10
		rows: 3
		cols: 2
		AnchorLayout:
			Label:
				text: root.mode_label
				font_size: 0.05 * root.height
				height: 150
				size_hint: None, None
		BoxLayout:
			orientation: 'vertical'
			AnchorLayout:
				Label:
					text: 'LOGGED IN AS: 417150'
					font_size: 0.05 * root.height
					height: 150
					size_hint: None, None
			AnchorLayout:
				Label:
					text: 'SCANNED ITEMS: 0'
					font_size: 0.05 * root.height
					height: 150
					size_hint: None, None
		Image:
			source: 'res/img/barcode-scanner.png'
		ScrollView:
			TextInput:
				multiline: True
				text: 'SCANNED BARCODES:'
				readonly: True
		AnchorLayout:
			Label:
				text: 'PLEASE SCAN THE ATTACHED BARCODE IN EQUAL QUANTITY OF THE ITEMS YOU WISH TO PROCESS'
				font_size: 0.05 * root.height
				size_hint_y: None
    			text_size: self.width, None
    			height: self.texture_size[1]
		BoxLayout:
			spacing: 10
			padding: 10
			Button:
				font_size: 0.05 * root.height
				text: 'LOGOUT'
				color: '#000000'
				background_color: '#FF0000'
				background_normal: ''
				background_pressed: ''
				on_release: root.logout()	
			Button:
				font_size: 0.05 * root.height
				text: 'BACK'
				color: '#000000'
				background_color: '#FFFF00'
				background_normal: ''
				background_pressed: ''
				on_release: root.back() 
			Button:
				font_size: 0.05 * root.height
				text: 'CONFIRM'
				color: '#000000'
				background_color: '#00FF00'
				background_normal: ''
				background_pressed: ''
				on_release: root.confirm()