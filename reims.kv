#:kivy 2.1.0
WindowManager:
	SplashScreen:
	LoginScreen:
	MainScreen:

<LoginScreen>:
	name: 'login'
	FloatLayout:
		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'bottom'

			Image:
				source: 'res/img/keycard.png'
				size_hint: .7, .7

		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'

			Label:
				text: 'PLEASE LOG IN WITH YOUR KEYCARD'
				font_size: 0.07 * root.height
				height: 150
				size_hint: None, None

<MainScreen>:
	name: 'main'
	GridLayout:
		spacing: 10
		padding: 10
		rows: 3
		cols: 2
		BoxLayout:
			orientation: 'vertical'
			AnchorLayout:
				anchor_y: 'top'
				Label:
					text: root.mode_label
					font_size: 0.05 * root.height
					height: 150
					size_hint: None, None
			BoxLayout:
				Button:
					id: out_btn
					text: 'CHECK-OUT'
					font_size: 0.06 * root.height
					on_release: root.check_out_button()
					disabled: True
				Button:
					id: in_btn
					text: 'CHECK-IN'
					font_size: 0.06 * root.height
					on_release: root.check_in_button()
		BoxLayout:
			orientation: 'vertical'
			AnchorLayout:
				Label:
					text: root.login_label
					font_size: 0.05 * root.height
					height: 150
					size_hint: None, None
			AnchorLayout:
				Label:
					text: root.scan_label
					font_size: 0.05 * root.height
					height: 150
					size_hint: None, None
		Image:
			source: 'res/img/barcode-scanner.png'
		ScrollView:
			TextInput:
				multiline: True
				text: root.scanned_items
				font_size: 0.03 * root.height
				readonly: True
		AnchorLayout:
			Label:
				text: 'PLEASE SCAN THE ATTACHED BARCODE IN EQUAL QUANTITY OF THE ITEMS YOU WISH TO PROCESS'
				font_size: 0.05 * root.height
				size_hint_y: None
    			text_size: self.width, None
    			height: self.texture_size[1]
		BoxLayout:
			spacing: 10
			padding: 10
			Button:
				font_size: 0.06 * root.height
				text: 'LOGOUT'
				color: '#000000'
				background_color: '#FF0000'
				background_normal: ''
				background_pressed: ''
				on_release: root.logout()	
			Button:
				font_size: 0.06 * root.height
				text: 'CONFIRM'
				color: '#000000'
				background_color: '#00FF00'
				background_normal: ''
				background_pressed: ''
				on_release: root.confirm()
